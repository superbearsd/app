.detail-container{
  display: flex;
  flex-direction: column;
}
.music-buton{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  opacity:0.6;
  left: 50%;
  margin-left: -50rpx;
  top: 180rpx;

}
.post-img{
  width: 100%;
  height:500rpx;
  margin-bottom: 18rpx;
}
.detail-infor{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.author-img{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  margin-right: 20rpx
  
}
.author-name{
  font-size: 30rpx;
  margin-right: 20rpx;
}
.post-time{
  font-size: 30rpx;
}
.post-title{
  margin-top: 20rpx;
  margin-left: 30rpx;
  font-size: 40rpx;
}
.post-operation{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
 
}
.oper-line{
  width: 80%;
  height: 1px;
  background-color: #e5e5e5;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}
.post-operation image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.post-content{
  font-size: 24rpx;
  font-family: STSong;
  color: #666;
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}