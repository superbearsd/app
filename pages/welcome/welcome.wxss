page{
background-color: #b3d4db;
height: 100%;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.user-name{
  margin-top: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.moto{
  font-size: 22rpx;
  font-weight: bold;
  font-family: MicroSoft Yahei;
  color: #405f80;
}

.moto-container{
  margin-top: 200rpx;
  border: 1rpx solid #405f80;
  height: 80rpx;
  width: 200rpx;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;

}
