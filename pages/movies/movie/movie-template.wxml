<import src="../stars/stars-template.wxml" />
<template name="movieTemplate">
  <view class="movie-container" data-id="{{id}}" catchtap="onDetailTap">
    <!-- <image class="movie-img" src="/images/wx.png"></image> -->
    <image class="movie-img" src="{{image}}"></image>
    <text class="movie-title">{{title}}</text>
    <template is="starsTemplate" data="{{average,stars}}"></template>
  </view>

</template>