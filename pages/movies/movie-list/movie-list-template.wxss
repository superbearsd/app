@import "../movie/movie-template.wxss";

.movieListContainer{
  background-color: white;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}
.movie-head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
  color: #1f4ba5;
  padding: 10rpx 22rpx;
}
.movie-more{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.movie-more image{
  height: 20rpx;
  width: 20rpx;
  margin-left: 10rpx;
}

.movies-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}